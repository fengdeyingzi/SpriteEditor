    android:layout_height="match_parent">
    <View
        android:layout_weight="0.1"
        android:layout_width="wrap_content"
        android:background="#f0a000"
        android:layout_height="match_parent"/>
    <View
        android:layout_weight="0.2"
        android:background="#f0f0f0"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
